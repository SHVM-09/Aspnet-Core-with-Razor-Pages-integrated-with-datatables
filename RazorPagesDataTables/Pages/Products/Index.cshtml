@page
@model RazorPagesDataTables.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-success mb-4">DataTable with Razor Pages connected with Database</h3>

<p class="mb-4">
    <a asp-page="Create" class="btn btn-outline-secondary">Create New</a>
</p>

<table id="example" class="display mt-4" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">@Html.DisplayNameFor(model => model.Product[0].Name)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Product[0].Price)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Product[0].ExpiryDate)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
 @foreach (var item in Model.Product) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-center text-success">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td class="text-center">
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-success">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
        </tbody>
</table>

@section Scripts {
    <script>
       new DataTable('#example');
    </script>
}